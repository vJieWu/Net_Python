import socket

UDPPort = 8888
FilterError = 10
FilterLost = 10


def main():
    ip_port = ('127.0.0.1', UDPPort)
    sk = socket.socket()
    sk.bind(ip_port)
    sk.listen(5)
    print('start listening')

    while True:
        frame_expected = 0  # seq number of expected frame
        conn, addr = sk.accept()
        client_data = conn.recv(1024)
        print(str(client_data, 'utf8'))
        conn.send(bytes('ack', 'utf8'))
        conn.close()


if __name__ == '__main__':
    main()
