import socket

UDPPort = 8888
FilterError = 10
FilterLost = 10


def main():
    ip_port = ('127.0.0.1', UDPPort)
    sk = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
    sk.bind(ip_port)
    frame_expected = 0

    while True:
        data, addr = sk.recvfrom(1024)
        print(str(data, 'utf8'))
        print(addr)
        #sk.sendto(bytes('ACK'+str(frame_expected), 'utf8'), addr)


if __name__ == '__main__':
    main()
